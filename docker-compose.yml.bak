services:
  db:
    image: postgres:16
    environment:
      POSTGRES_USER: algjudge
      POSTGRES_PASSWORD: algjudge
      POSTGRES_DB: algjudge
    ports:
      - "5432:5432"
    volumes:
      - dbdata:/var/lib/postgresql/data

  redis:
    image: redis:7
    ports:
      - "6379:6379"

  api:
    build: ./apps/api
    env_file: .env
    depends_on:
      - db
      - redis
    ports:
      - "3000:3000"

  worker_stub:
    build: ./apps/workers/worker_stub
    env_file: .env
    depends_on:
      - redis

volumes:
  dbdata:
